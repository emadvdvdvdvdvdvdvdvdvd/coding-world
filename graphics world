

import turtle
import colorsys

# creat window to display pattern
t = turtle.Turtle()
s = turtle.Screen()
# setting background color
s.bgcolor("black")

 # speed of turtle to draw pattern
t.speed(0)

n = 36
h = 0
 # loop for drawing pattern
for i in range(460):
     c = colorsys.rgb_to_hsv(h,1,0)
     h+=1/n
     t.color(c)
     t.left(145)
     for j in range(5):
         t.forward(300)
         t.left(150)
